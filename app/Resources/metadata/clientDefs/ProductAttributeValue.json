{
  "controller": "controllers/record",
  "iconClass": "fas fa-list",
  "createDisabled": true,
  "boolFilterList": [
    "onlyMy"
  ],
  "disabledMassActions": [
    "merge"
  ],
  "acl": "pim:acl/product-attribute-value",
  "modalViews": {
    "detail": "pim:views/product-attribute-value/modals/detail",
    "edit": "pim:views/product-attribute-value/modals/edit"
  },
  "dynamicLogic": {
    "fields": {
      "channel": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "attributeId"
            }
          ]
        }
      },
      "value": {
        "required": {
          "conditionGroup": [
            {
              "type": "isTrue",
              "attribute": "isRequired"
            }
          ]
        },
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "attributeId"
            }
          ]
        }
      },
      "attribute": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      }
    }
  }
}