{
  "controller": "controllers/record",
  "iconClass": "check-fat",
  "boolFilterList": [
    "onlyMy"
  ],
  "kanbanViewMode": false,
  "color": null,
  "modalViews": {
    "edit": "pim:views/classification-attribute/modals/edit"
  },
  "dynamicLogic": {
    "fields": {
      "classification": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "attributeId"
            }
          ]
        }
      },
      "isRequired": {
        "visible": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "attributeId"
            }
          ]
        }
      },
      "attribute": {
        "readOnly": {
          "conditionGroup": [
            {
              "type": "isNotEmpty",
              "attribute": "id"
            }
          ]
        }
      },
      "maxLength": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "attributeType",
              "value": [
                "varchar",
                "text",
                "markdown",
                "wysiwyg"
              ]
            }
          ]
        }
      },
      "countBytesInsteadOfCharacters": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "attributeType",
              "value": [
                "varchar",
                "text",
                "markdown",
                "wysiwyg"
              ]
            }
          ]
        }
      },
      "min": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "attributeType",
              "value": [
                "int",
                "float"
              ]
            }
          ]
        }
      },
      "max": {
        "visible": {
          "conditionGroup": [
            {
              "type": "in",
              "attribute": "attributeType",
              "value": [
                "int",
                "float"
              ]
            }
          ]
        }
      }
    }
  }
}